<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="FatouraDZ.Views.ConfirmationDialog"
        Title="Confirmation"
        Width="450" Height="220"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False">

    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Titre -->
        <TextBlock Grid.Row="0" x:Name="TitreText"
                   FontSize="18" FontWeight="Bold" 
                   Margin="0,0,0,15"/>
        
        <!-- Message -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="MessageText"
                       TextWrapping="Wrap" 
                       Foreground="#374151"/>
        </ScrollViewer>
        
        <!-- Boutons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
            <Button Content="Annuler" 
                    Click="OnAnnulerClick"
                    Padding="20,10" MinWidth="100"/>
            <Button Content="Confirmer" 
                    Click="OnConfirmerClick"
                    Classes="primary"
                    Padding="20,10" MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>
