<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FatouraDZ.ViewModels"
        xmlns:views="using:FatouraDZ.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="FatouraDZ.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="FatouraDZ - Application de Facturation"
        WindowState="Maximized"
        MinWidth="900" MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="200,*">
        <!-- Menu latÃ©ral -->
        <Border Grid.Column="0" 
                Background="{StaticResource CardBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Logo et titre -->
                <Border Grid.Row="0" Padding="20" Background="{StaticResource PrimaryBrush}">
                    <StackPanel Spacing="4">
                        <TextBlock Text="FatouraDZ" 
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Gestion Multi-Entreprises" 
                                   FontSize="11" Foreground="#DBEAFE"/>
                    </StackPanel>
                </Border>

                <!-- Menu de navigation -->
                <ScrollViewer Grid.Row="1">
                    <StackPanel Margin="12,20">
                        <Button Classes="nav-button"
                                Command="{Binding AfficherListeEntreprisesCommand}">
                            <TextBlock Text="ðŸ¢ Entreprises" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Button>

                        <Separator Margin="0,12" Background="{StaticResource BorderBrush}"/>

                        <!-- Gestion des donnÃ©es -->
                        <TextBlock Text="DONNÃ‰ES" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   FontSize="11" FontWeight="SemiBold"
                                   Margin="16,8,0,8"/>

                        <Button Classes="nav-button"
                                Command="{Binding ExporterBaseDeDonneesCommand}">
                            <TextBlock Text="ðŸ“¤ Exporter" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Button>

                        <Button Classes="nav-button"
                                Command="{Binding ImporterBaseDeDonneesCommand}">
                            <TextBlock Text="ðŸ“¥ Importer" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Button>

                        <!-- Message de gestion des donnÃ©es -->
                        <TextBlock Text="{Binding MessageGestionDonnees}" 
                                   Foreground="{StaticResource SuccessBrush}" FontSize="11"
                                   TextWrapping="Wrap"
                                   Margin="16,8"
                                   IsVisible="{Binding MessageGestionDonnees, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                        <Separator Margin="0,12" Background="{StaticResource BorderBrush}"/>

                        <Button Classes="nav-button"
                                Command="{Binding AfficherAProposCommand}">
                            <TextBlock Text="â„¹ï¸ Ã€ propos" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Version en bas -->
                <TextBlock Grid.Row="2" 
                           Text="Version 2.0.0" 
                           FontSize="11" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,16"/>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}">
            <ContentControl Content="{Binding ContenuActuel}">
                <ContentControl.DataTemplates>
                    <DataTemplate DataType="vm:BusinessListViewModel">
                        <views:BusinessListView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:BusinessDetailViewModel">
                        <views:BusinessDetailView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:BusinessFormViewModel">
                        <views:BusinessFormView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:NouvelleFactureViewModel">
                        <views:NouvelleFactureView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:AProposViewModel">
                        <views:AProposView/>
                    </DataTemplate>
                </ContentControl.DataTemplates>
            </ContentControl>
        </Border>
    </Grid>

</Window>
