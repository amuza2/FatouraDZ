<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FatouraDZ.ViewModels"
        xmlns:views="using:FatouraDZ.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="FatouraDZ.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="FatouraDZ - Application de Facturation"
        WindowState="Maximized"
        MinWidth="900" MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="220,*">
        <!-- Menu latÃ©ral -->
        <Border Grid.Column="0" 
                Background="{StaticResource CardBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto,*,Auto">
                <!-- Logo et titre -->
                <Border Grid.Row="0" Padding="20" Background="{StaticResource PrimaryBrush}">
                    <StackPanel Spacing="4">
                        <TextBlock Text="FatouraDZ" 
                                   FontSize="24" FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="{Binding CurrentBusiness.Nom, FallbackValue='Gestion Multi-Entreprises'}" 
                                   FontSize="11" Foreground="#DBEAFE" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Border>

                <!-- Menu de navigation -->
                <ScrollViewer Grid.Row="1">
                    <StackPanel Margin="12,20" Spacing="4">
                        <!-- Menu hors contexte entreprise -->
                        <StackPanel Spacing="4" IsVisible="{Binding EstHorsContexteEntreprise}">
                            <Button Classes="nav-button"
                                    Command="{Binding AfficherListeEntreprisesCommand}">
                                <TextBlock Text="ðŸ¢ Entreprises" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Button>
                            <Button Classes="nav-button"
                                    Command="{Binding AfficherParametresCommand}">
                                <TextBlock Text="âš™ï¸ ParamÃ¨tres" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Button>
                            <Button Classes="nav-button"
                                    Command="{Binding AfficherAideCommand}">
                                <TextBlock Text="â“ Aide" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Button>
                        </StackPanel>

                        <!-- Menu dans contexte entreprise -->
                        <StackPanel Spacing="4" IsVisible="{Binding EstDansContexteEntreprise}">
                            <!-- Retour aux entreprises -->
                            <Button Classes="nav-button"
                                    Command="{Binding AfficherListeEntreprisesCommand}"
                                    Margin="0,0,0,10">
                                <TextBlock Text="â† Mes entreprises" Foreground="{StaticResource PrimaryBrush}" FontWeight="SemiBold"/>
                            </Button>
                            
                            <Separator Background="{StaticResource BorderBrush}" Margin="0,0,0,10"/>
                            
                            <!-- Sections entreprise -->
                            <Button Classes="nav-button"
                                    Command="{Binding AfficherFacturesCommand}">
                                <TextBlock Text="ðŸ“„ Factures" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Button>
                            <Button Classes="nav-button"
                                    Command="{Binding AfficherClientsCommand}">
                                <TextBlock Text="ðŸ‘¥ Clients" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Button>
                            <Button Classes="nav-button"
                                    Command="{Binding AfficherComptabiliteCommand}">
                                <TextBlock Text="ðŸ“Š ComptabilitÃ©" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Button>
                            <Button Classes="nav-button"
                                    Command="{Binding AfficherInfosEntrepriseCommand}">
                                <TextBlock Text="ðŸ¢ Infos entreprise" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Button>
                            
                            <Separator Background="{StaticResource BorderBrush}" Margin="0,10,0,10"/>
                            
                            <Button Classes="nav-button"
                                    Command="{Binding AfficherParametresCommand}">
                                <TextBlock Text="âš™ï¸ ParamÃ¨tres" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Version at bottom -->
                <StackPanel Grid.Row="2" Margin="12,0,12,16">
                    <Separator Margin="0,0,0,12" Background="{StaticResource BorderBrush}"/>
                    <TextBlock Text="Version 1.0.0" 
                               FontSize="11" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Border Grid.Column="1" Background="{StaticResource BackgroundBrush}">
            <ContentControl Content="{Binding ContenuActuel}">
                <ContentControl.DataTemplates>
                    <DataTemplate DataType="vm:BusinessListViewModel">
                        <views:BusinessListView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:BusinessDetailViewModel">
                        <views:BusinessDetailView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:BusinessFormViewModel">
                        <views:BusinessFormView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:NouvelleFactureViewModel">
                        <views:NouvelleFactureView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:AProposViewModel">
                        <views:AProposView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:SettingsViewModel">
                        <views:SettingsView/>
                    </DataTemplate>
                    <DataTemplate DataType="vm:ClientListViewModel">
                        <views:ClientListView/>
                    </DataTemplate>
                </ContentControl.DataTemplates>
            </ContentControl>
        </Border>
    </Grid>

</Window>
