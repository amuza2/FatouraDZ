<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Base TextBox Style -->
    <Style Selector="TextBox">
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="{StaticResource CardBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    <Style Selector="TextBox:focus">
        <Setter Property="BorderBrush" Value="{StaticResource BorderFocusBrush}"/>
    </Style>
    <Style Selector="TextBox:pointerover">
        <Setter Property="BorderBrush" Value="{StaticResource BorderHoverBrush}"/>
    </Style>
    
    <!-- Error State -->
    <Style Selector="TextBox.error">
        <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
    <Style Selector="TextBox.error:focus">
        <Setter Property="BorderBrush" Value="{StaticResource ErrorHoverBrush}"/>
    </Style>
    
</Styles>
