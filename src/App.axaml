<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FatouraDZ.App"
             xmlns:local="using:FatouraDZ"
             xmlns:converters="using:FatouraDZ.Converters"
             RequestedThemeVariant="Light">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://FatouraDZ/Styles/Colors.axaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:EqualConverter x:Key="EqualConverter"/>
        </ResourceDictionary>
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://FatouraDZ/Styles/ButtonStyles.axaml"/>
        <StyleInclude Source="avares://FatouraDZ/Styles/TextBoxStyles.axaml"/>
        <StyleInclude Source="avares://FatouraDZ/Styles/ComboBoxStyles.axaml"/>
        <StyleInclude Source="avares://FatouraDZ/Styles/DatePickerStyles.axaml"/>
        <StyleInclude Source="avares://FatouraDZ/Styles/TextBlockStyles.axaml"/>
        <StyleInclude Source="avares://FatouraDZ/Styles/BorderStyles.axaml"/>
    </Application.Styles>
</Application>