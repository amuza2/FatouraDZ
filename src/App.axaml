<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FatouraDZ.App"
             xmlns:local="using:FatouraDZ"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        
        <Style Selector="Button.nav-button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CBD5E1"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
        <Style Selector="Button.nav-button:pointerover">
            <Setter Property="Background" Value="#334155"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.nav-button:pressed">
            <Setter Property="Background" Value="#475569"/>
        </Style>
        
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#1D4ED8"/>
        </Style>
        <Style Selector="Button.primary:pressed">
            <Setter Property="Background" Value="#1E40AF"/>
        </Style>
        
        <Style Selector="TextBox">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
        </Style>
        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="#2563EB"/>
        </Style>
        <Style Selector="TextBox.error">
            <Setter Property="BorderBrush" Value="#EF4444"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        <Style Selector="TextBox.error:focus">
            <Setter Property="BorderBrush" Value="#DC2626"/>
        </Style>
        
        <Style Selector="TextBlock.error-message">
            <Setter Property="Foreground" Value="#EF4444"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
        
        <Style Selector="TextBlock.success-message">
            <Setter Property="Foreground" Value="#10B981"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
        
        <Style Selector="ComboBox.error">
            <Setter Property="BorderBrush" Value="#EF4444"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <Style Selector="DatePicker.error">
            <Setter Property="BorderBrush" Value="#EF4444"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <Style Selector="Border.card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BoxShadow" Value="0 1 3 0 #1A000000"/>
        </Style>
    </Application.Styles>
</Application>